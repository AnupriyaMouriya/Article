{
  "register": {
    "type": "object",
    "properties": {
      "name": { "type": "string", "pattern":"^[a-zA-Z ]+$" , "minLength": 2, "maxLength": 100 },
      "email": { "type": "string","pattern":"^.+@[a-zA-Z0-9-.]+.([a-zA-Z]{2,3}|[0-9]{1,3}$)","format": "email" }
    },
    "required": [ "name", "email" ]
  }
}
